<html>
<% include ../../views/partials/header %>
  
  <body>
    <% include ../../views/partials/nav-bar %>
      <div class="container">
        <h2>Adicionar Solicitaçao</h2>

        <form id="form" action="/solicitacoes/adicionar" method="post">
          <div class="row">

            <div class="col-sm-12">
              <div class="form-group ">
                <label>Descrição</label>
                <textarea name="descricao" class="form-control" required ></textarea>
                <span class="aviso"></span>
              </div>
              <div class="form-group ">
                <label>Quantidade</label>
                <input type="number" class="form-control " name="quantidade">
              </div>
              <div class="form-group ">
                <label>Justificativa</label>
                <textarea name="justificativa" class="form-control"></textarea>
                <span class="aviso"></span>
              </div>
              <button onclick="add_orcamento()"
                    type="button"
                    id="addButton"
                    class="btn btn-info"
                    style="display: block; margin: 5px 0">
                  Adicionar Orçamento
              </button>
            </div>

            <div class="col-sm-6" id="orcamentos"></div>
          </div>

          <div class="row">
            <div class="col-sm-12">
              <button type="submit" class="btn btn-success ">Salvar</button>
              <a href="/solicitacoes" class="btn btn-warning">Cancelar</a>
            </div>
          </div>

        </form>
        <script src="/js/adicionarSolicitacao.js"></script>
      </div>
  </body>