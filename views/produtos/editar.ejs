<html>
<% include ../../views/partials/header %>
  <body>
    <% include ../../views/partials/nav-bar %>
      <div class="container" style="margin: 0 auto; width:40%;">
        <h2>Editar Produto</h2>
        <form action="/produtos/<%= produto.id %>/editar" method="post">
          <div class="form-group ">
            <label>Nome</label>
            <input type="text " class="form-control" name="nome">
          </div>
          <div class="form-group ">
            <label>Código SIORG</label>
            <input type="text " class="form-control " name="cod_siorg">
          </div>
          <div class="form-group ">
            <label>Descrição SIORG</label>
            <input type="text " class="form-control " name="descricao_siorg">
          </div>
          <div class="form-group ">
            <label>Categoria</label>
            <input type="text " class="form-control " name="categoria">
          </div>
          <div class="form-group ">
            <label>Condição</label>
            <input type="text " class="form-control " name="condicao">
          </div>

          <button type="submit" class="btn btn-success ">Salvar</button>
          <a href="/produtos" class="btn btn-warning">Cancelar</a>
        </form>
      </div>
      <% include ../../views/partials/scripts %>
  </body>


</html>